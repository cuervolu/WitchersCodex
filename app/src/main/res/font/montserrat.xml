<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- regular -->
    <font
        android:font="@font/montserrat_regular"
        android:fontStyle="normal"
        android:fontWeight="400"

        app:font="@font/montserrat_regular"
        app:fontStyle="normal"
        app:fontWeight="400" />

    <!-- Italic -->
    <font
        android:font="@font/montserrat_italic"
        android:fontStyle="italic"
        android:fontWeight="400"

        app:font="@font/montserrat_italic"
        app:fontStyle="italic"
        app:fontWeight="400" />

    <!-- medium -->
    <font
        android:font="@font/montserrat_medium"
        android:fontStyle="normal"
        android:fontWeight="500"

        app:font="@font/montserrat_medium"
        app:fontStyle="normal"
        app:fontWeight="500" />

    <!-- light -->
    <font
        android:font="@font/montserrat_light"
        android:fontStyle="normal"
        android:fontWeight="300"

        app:font="@font/montserrat_light"
        app:fontStyle="normal"
        app:fontWeight="300" />

    <!-- bold -->
    <font
        android:font="@font/montserrat_bold"
        android:fontStyle="normal"
        android:fontWeight="700"

        app:font="@font/montserrat_bold"
        app:fontStyle="normal"
        app:fontWeight="700" />

    <!--extra bold -->
    <font
        android:font="@font/montserrat_extrabold"
        android:fontStyle="normal"
        android:fontWeight="800"

        app:font="@font/montserrat_extrabold"
        app:fontStyle="normal"
        app:fontWeight="800" />
</font-family>